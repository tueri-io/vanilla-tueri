{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "browsers": ["defaults", "ie > 8"]
                }
            }
        ]
    ],
    "plugins": [
        [
            "@babel/plugin-transform-runtime",
            {
              "absoluteRuntime": false,
              "corejs": false,
              "helpers": true,
              "regenerator": true,
              "useESModules": false
            }
        ] 
    ]
}